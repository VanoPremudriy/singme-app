<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChooseMemberLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvChooseMemberAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivChooseMemberAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/back" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvChooseMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/cvChooseMemberAvatar"
        app:layout_constraintStart_toStartOf="@+id/cvChooseMemberAvatar"
        app:layout_constraintTop_toBottomOf="@+id/cvChooseMemberAvatar" />
</androidx.constraintlayout.widget.ConstraintLayout>