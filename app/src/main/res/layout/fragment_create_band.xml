<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CreateBandFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAddBandAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="1000dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addBandName">

            <ImageView
                android:id="@+id/ivAddBandAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/back" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/bAddBandAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/cvAddBandAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cvAddBandAvatar"
            app:layout_constraintTop_toTopOf="@+id/cvAddBandAvatar" />

        <ImageView
            android:id="@+id/ivAddBandBack"
            android:layout_width="212dp"
            android:layout_height="118dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="84dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bAddBandAvatar" />

        <EditText
            android:id="@+id/addBandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bAddBandBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/ivAddBandBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAddBandBack"
            app:layout_constraintTop_toTopOf="@+id/ivAddBandBack" />

        <EditText
            android:id="@+id/etBandInfo"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="#E1DFDF"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/band_info"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAddBandBack" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/bCreateBand"
            tools:layout_editor_absoluteX="177dp" />

    <Button
        android:id="@+id/bCreateBand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBandInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
